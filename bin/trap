#!/usr/bin/ruby
# A shell script that defines the command-line interface for Trapeze.

require File.expand_path("#{File.dirname __FILE__}/../trapeze")

loader = Trapeze::Loader.new(*Dir.glob(ARGV[0]))
probe = Trapeze::Probes::BasicProbe.new(loader)
generator = Trapeze::SuiteGenerators::TestUnit.new(ARGV[1])
generator.generate! probe.results
